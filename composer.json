{
    "name": "masiuchi/inside-json",
    "type": "library",
    "description": "Codec for inside JSON",
    "homepage": "https://github.com/masiuchi/php-inside-json",
    "license": "MIT",
    "authors": [
        {
            "name": "Masahiro IUCHI",
            "email": "masahiro.iuchi@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "InsideJson\\": "src/InsideJson"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InsideJson\\Test\\": "tests/InsideJson/Test"
        }
    },
    "require": {
        "ext-dom": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "platform": {
            "PHP": "5.4"
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs src/ tests/",
        "phpcbf": "phpcbf src/ tests/"
    }
}
